{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "declaration": true,
    "strict": true,
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types", "./@types"],
    "rootDirs": ["*", "./"],
    "baseUrl": "./",
    "paths": {
      "*": ["./node_modules/*", "@types/*"]
    },
    "lib": [
      "es5",
      "es6",
      "dom",
      "es2016.array.include",
      "es2015.core",
      "es2015.collection",
      "es2015.generator",
      "es2015.iterable",
      "es2015.promise",
      "es2015.proxy",
      "es2015.reflect",
      "es2015.symbol",
      "es2015.symbol.wellknown",
      "esnext.asynciterable"
    ]
  },
  "exclude": ["**/*.spec.ts"]
}
